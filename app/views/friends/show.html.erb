
<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %>
      <%= @friend.last_name %>
    </h5>
    <p class="card-text">
     <strong>Email:</strong>
       <%= @friend.email %>
        <br/>
       <strong>Phone:</strong>
       <%= @friend.phone %>
       <br/>
       <strong>Twitter:</strong>
       <%= @friend.twitter %>
    </p>
    <br/>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> 

    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

    <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
  </div>
</div>

